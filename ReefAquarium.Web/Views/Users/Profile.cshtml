@model UserProfileServiceModel

@{
    ViewData["Title"] = $"{Model.Username} Profile";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Name - @Model.BrithDate.ToShortDateString()</h3>
@if (Model.Username == User.Identity.Name)
{
    <a asp-controller="Manage" asp-action="Index" class="btn btn-default">Edit Profile</a>
    <br />
    <br />
}

<div class="row">
    @foreach (var aquarium in Model.Aquariums)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <a asp-controller="Aquariums" asp-action="Details" asp-route-id="@aquarium.Id">@aquarium.Title</a>
                    </h3>
                </div>
                <div class="panel-body">
                    <img src="@aquarium.ImageUrl" class="img-responsive">
                    <br />
                    <p class="text-center">@aquarium.Owner</p>
                </div>
            </div>
        </div>
    }
</div>