@model AddFishFormModel
@{
    ViewData["Title"] = "Add Fish";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BreedId"></label>
                <select asp-for="BreedId" asp-items="Model.Breeds" class="form-control"></select>
                <span asp-validation-for="BreedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AquariumId" rows="10" class="form-control">
                <span asp-validation-for="AquariumId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Fish</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}